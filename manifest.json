{
  "manifest_version": 3,
  "name": "Bluesky Inline Translator",
  "version": "1.0",
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://bsky.app/*"
  ],
  "options_page": "options.html",
  "description": "A plugin to translate Bluesky posts and comments directly on the page",
  "permissions": ["scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["https://bsky.app/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
